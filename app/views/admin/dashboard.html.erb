<h1>Admin Dashboard</h1>

<h3><%= link_to "Merchants Index", "/admin/merchants"%></h3>
<h3><%= link_to "Invoices Index", "/admin/invoices"%></h3>

<h2>Top 5 Customers</h2>
<% @merchants.top_customers.each do |customer| %>
  <h3><%= customer.full_name %> with <%= customer.successful_transactions_count %> completed transactions</h3>
<% end %>

<h2>Incomplete Invoices</h2>

<% @invoices.each do |invoice| %>
  <p><%= link_to "Invoice: #{invoice.id}", "/admin/invoices/#{invoice.id}"%> Created On: <%= invoice.created_at.strftime("%A, %B %d, %Y")%></p>
<% end %>
